<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Наши приложения"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:paddingBottom="16dp"/>

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Назад"
        android:layout_gravity="start"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bannerNeiroCafe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/banner_neiro_cafe"
                android:contentDescription="НейроКафе"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"/>

            <ImageView
                android:id="@+id/bannerMetaModern"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/banner_meta_modern"
                android:contentDescription="MetaModern"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"/>

            <ImageView
                android:id="@+id/bannerBogoban"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/banner_bogoban"
                android:contentDescription="БоГобан"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
